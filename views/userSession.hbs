<h2 class="my-4 text-center">User Session</h2>

<div class="card mx-auto" style="max-width: 800px;">
  <div class="card-header bg-primary text-white">
    <h4 class="mb-0">Session Details</h4>
  </div>
  <div class="card-body">
    <div class="mb-3">
      <strong>Username:</strong> <span class="text-muted">{{userName}}</span>
    </div>
    <div class="mb-3">
      <strong>Email:</strong> <span class="text-muted">{{email}}</span>
    </div>
    <h5 class="mt-4">Login History</h5>
    {{#if loginHistory}}
      <table class="table table-bordered mt-3">
        <thead class="table-light">
          <tr>
            <th>Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          {{#each loginHistory}}
          <tr>
            <td>{{this.dateTime}}</td>
            <td>{{this.userAgent}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div class="alert alert-warning mt-3" role="alert">
        No login history available.
      </div>
    {{/if}}
  </div>
  <div class="card-footer text-center">
    <a href="/items" class="btn btn-secondary me-2">Back to Items</a>
    <a href="/logout" class="btn btn-danger">Log Out</a>
  </div>
</div>
